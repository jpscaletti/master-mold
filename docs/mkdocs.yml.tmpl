---
nav:
  - [[ "\n  - ".join(docs_nav) ]]

site_name: [[ title ]]
site_description: [[ description ]]
site_author: [[ author ]]
site_url: https://github.com/[[ repo_name ]]

repo_name: [[ repo_name ]]
repo_url: https://github.com/[[ repo_name ]]
edit_uri: ""

theme:
  name: material
  custom_dir: material
  logo:
    icon: cloud_done
  palette:
    primary: red
    accent: pink

extra_css:
  - css/monokai.css
  - css/extra.css

# Customization
extra:
  # manifest: "manifest.webmanifest"
  social:
    [%- if home_url %]
    - type: globe
      link: [[ home_url ]]
    [% endif -%]
    - type: github-alt
      link: https://github.com/[[ repo_name ]]

markdown_extensions:
  - admonition
  - codehilite:
      css_class: highlight
      guess_lang: false
  - smarty
  - toc:
      permalink: "#"
  - markdown.extensions.tables
  - pymdownx.betterem:
      smart_enable: all
  - pymdownx.caret
  - pymdownx.details
  - pymdownx.emoji:
      emoji_generator: !!python/name:pymdownx.emoji.to_svg
  # - pymdownx.inlinehilite
  - pymdownx.magiclink
  - pymdownx.mark
  - pymdownx.smartsymbols
  - pymdownx.superfences
  - pymdownx.tasklist
  - pymdownx.tilde

[% if google_analytics -%]
google_analytics:
  - [[ google_analytics ]]
  - auto
[%- else -%]
# google_analytics:
#   - UA-XXXXXXXX-X
#   - auto
[%- endif %]